@model IEnumerable<BTLWebKhaoSat.Models.Survey>

<h2>All Surveys</h2>

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var survey in Model)
    {
        <div style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; width: 300px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <h4 style="margin-bottom: 15px;">@survey.Title</h4>
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <a href="/Survey/AnswerSurvey/@survey.SurveyId" class="btn btn-primary" style="margin-right: 10px;">Answer</a>
                @if (Context.Session.GetString("RoleId") == "1")
                {
                    <form asp-controller="Survey" asp-action="Delete" asp-route-id="@survey.SurveyId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    }
</div>
