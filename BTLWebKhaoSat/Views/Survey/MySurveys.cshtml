@model IEnumerable<BTLWebKhaoSat.Models.Survey>

<h2 style="text-align: center; margin-bottom: 20px;">My Surveys</h2>

<a asp-controller="Survey" asp-action="Index" class="btn btn-secondary mb-3" style="margin-bottom: 20px; padding: 10px 20px; text-decoration: none; font-size: 14px; border-radius: 4px;">All Surveys</a>

<table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <thead style="background-color: #007bff; color: white; text-align: left;">
        <tr>
            <th style="padding: 12px; border-bottom: 1px solid #ddd;">Title</th>
            <th style="padding: 12px; border-bottom: 1px solid #ddd;">Created At</th>
            <th style="padding: 12px; border-bottom: 1px solid #ddd;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var survey in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px;">@survey.Title</td>
                <td style="padding: 12px;">@survey.CreatedAt</td>
                <td style="padding: 12px;">
                    <a asp-controller="Survey" asp-action="Responses" asp-route-id="@survey.SurveyId" class="btn btn-info" style="padding: 8px 16px; font-size: 14px; border-radius: 4px; color: white; text-decoration: none;">View</a>
                    <form asp-controller="Survey" asp-action="Delete" asp-route-id="@survey.SurveyId" method="post" style="display:inline; margin-left: 10px;" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                        <button type="submit" class="btn btn-danger" style="padding: 8px 16px; font-size: 14px; border-radius: 4px; background-color: #dc3545; color: white; border: none; cursor: pointer;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
