@model IEnumerable<BTLWebKhaoSat.Models.Survey>

<h2 style="text-align: center; margin-bottom: 20px;">All Surveys</h2>

<div style="display: flex; flex-direction: column; gap: 20px; margin-top: 20px;">
    @foreach (var survey in Model)
    {
            <div style="background-color: #ffffff; border: 1px solid #ddd; border-radius: 8px; padding: 20px; width: 100%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
                <h4 style="margin-bottom: 15px; font-size: 20px; font-weight: bold; color: #333;">@survey.Title</h4>
                <div style="display: flex; justify-content: space-between; gap: 10px; align-items: center;">
                    <a href="/Survey/AnswerSurvey/@survey.SurveyId" class="btn btn-primary" style="margin-right: 10px;">Answer</a>
                @if (Context.Session.GetString("RoleId") == "1")
                {
                            <form asp-controller="Survey" asp-action="Delete" asp-route-id="@survey.SurveyId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                                <button type="submit" style="padding: 8px 16px; font-size: 14px; border-radius: 4px; background-color: #dc3545; color: white; border: none; cursor: pointer; transition: background-color 0.3s ease;">Delete</button>
                            </form>
                }
                </div>
            </div>
    }
</div>

